<telerik:RadWindow x:Class="Padron.Cierre.ExportarKiosko"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                   Width="517"
                   Height="300"
                   Header="ExportarKiosko"
                   Loaded="RadWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <telerik:RadProgressBar x:Name="PbMainProcess"
                                Height="30"
                                Margin="20,45,20,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Value="50" />
        <Label x:Name="LblProceso"
               Margin="20,14,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Label" />

        <Button x:Name="BtnExportaKiosko"
                Grid.Row="2"
                Width="75"
                Margin="195,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnExportaKiosko_Click"
                Content="Comenzar" />

    </Grid>
</telerik:RadWindow>